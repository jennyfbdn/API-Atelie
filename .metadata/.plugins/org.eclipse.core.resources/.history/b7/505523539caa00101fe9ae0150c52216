package br.itb.projeto.pizzaria3e.model.repository;

import java.util.List;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.stereotype.Repository;

import br.itb.projeto.pizzaria3e.model.entity.Notificacao;

@Repository
public interface NotificacaoRepository extends JpaRepository<Notificacao, Long> {
    
    List<Notificacao> findByUsuarioIdOrderByDataEnvioDesc(long usuarioId);
    
    List<Notificacao> findByUsuarioIdAndLidaOrderByDataEnvioDesc(long usuarioId, boolean lida);
    
    long countByUsuarioIdAndLida(long usuarioId, boolean lida);
}